---
import Layout from "@/layouts/Layout.astro";
import GroupDetailsPage from "@/components/groups/details/GroupDetailsPage";

const { groupId } = Astro.params;

if (!groupId) {
  return Astro.redirect("/groups");
}

const breadcrumbs = [{ label: "Groups", href: "/groups" }, { label: "Group Details" }];
---

<Layout title="Group Details" breadcrumbs={breadcrumbs}>
  <GroupDetailsPage client:load groupId={groupId} />
</Layout>
